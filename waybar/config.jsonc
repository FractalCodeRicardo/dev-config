{
  "layer": "top",
  "position": "top",
  "height": 28,

  "modules-left": ["hyprland/workspaces"],
  "modules-center": ["clock"],
  "modules-right": ["cpu", "memory", "network", "battery", "pulseaudio"],

  "clock": {
    "format": "  {:%H:%M  •  %a, %d %b %Y}",
    "tooltip-format": "{:%A, %B %d %Y  •  %H:%M:%S}"
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "",
      "2": "",
      "3": "",
      "4": "",
      "5": ""
    },
    "disable-scroll": true,
    "all-outputs": true
  },

"pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "󰝟 Muted",
    "on-click": "pavucontrol", // Opens the volume mixer on click
    "scroll-step": 5, // Percent to change per scroll
    "format-icons": {
        "headphone": "",
        "hands-free": "",
        "headset": "",
        "phone": "",
        "portable": "",
        "car": "",
        "default": ["", "", ""]
    }
},


  "cpu": {
    "format": " {usage}%",
    "tooltip": false
  },

  "memory": {
    "format": " {used:0.1f}G",
    "tooltip": false
  },

  "network": {
    "format-wifi": "  {essid}",
    "format-ethernet": "󰈀 {ifname}",
    "format-disconnected": "󰖪 Offline",
    "tooltip": false
  },

  "battery": {
    "format": "{icon} {capacity}%",
    "format-icons": ["󰂎", "󰁺", "󰁼", "󰁿", "󰂁"],
    "tooltip": false
  }
}
